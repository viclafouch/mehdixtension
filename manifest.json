{
    "manifest_version": 2,
    "name": "MehdiExtension",
    "description": "L'extension qui mehdash un texte",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "MehdiExtension"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/js/main.js"
            ]
        }
    ]
}